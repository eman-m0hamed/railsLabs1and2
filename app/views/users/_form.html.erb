
<%= form_with(model: user) do |form| %>

   <!-- name label and input -->
  <div class="mb-3">
    <%= form.label :name , class: "form-label" %>
    <%= form.text_field :name , class: "form-control w-50 #{'is-invalid' if @user.errors[:name].any?}" , placeholder: "User Name" %>
    <!-- name error div -->
    <% if @user.errors[:name].any? %>
      <div class="invalid-feedback d-block">
        <%= @user.errors[:name].first %>
      </div>
    <% end %>
  </div>

   <!-- email label and input -->
  <div class="mb-3">
    <%= form.label :email , class: "form-label" %>
    <%= form.email_field :email , class: "form-control w-50 #{'is-invalid' if @user.errors[:email].any?}" , placeholder: "User Email" %>
    <!-- email error div -->
    <% if @user.errors[:email].any? %>
      <div class="invalid-feedback d-block">
        <%= @user.errors[:email].first %>
      </div>
    <% end %>
  </div>

  <!-- password label and input -->
  <div class="mb-3">
    <%= form.label :password , class: "form-label" %>
    <%= form.password_field :password , class: "form-control w-50 #{'is-invalid' if @user.errors[:password].any?}" , placeholder: "User Password" %>
    <!-- password error div -->
    <% if @user.errors[:password].any? %>
      <div class="invalid-feedback d-block">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>

  <!-- password_confirmation label and input -->
  <div class="mb-3">
    <%= form.label :password_confirmation , class: "form-label" %>
    <%= form.password_field :password_confirmation , class: "form-control w-50 #{'is-invalid' if @user.errors[:password_confirmation].any?}" , placeholder: "User password_confirmation" %>
    <!-- password_confirmation error div -->
    <% if @user.errors[:password_confirmation].any? %>
      <div class="invalid-feedback d-block">
        <%= @user.errors[:password_confirmation].first %>
      </div>
    <% end %>
  </div>

 <!-- submit button -->
  <div>
    <%= form.submit "Sign up" , class: "btn btn-primary mt-4" %>
  </div>
<% end %>
