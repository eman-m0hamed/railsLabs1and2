<% if notice %>
  <p class="alert alert-success" role="alert"><%= notice %></p>
<% end %>

<h1>Student Data</h1>

<p class="fs-5 fw-bold"> <span class="fs-4 fst-italic text-primary">Name: </span> <%= @student.name %> </p>
<p class="fs-5 fw-bold"> <span class="fs-4 fst-italic text-primary">ID Number: </span> <%= @student.IDno %> </p>
<p class="fs-5 fw-bold"> <span class="fs-4 fst-italic text-primary">Age: </span> <%= @student.age %> </p>
<p class="fs-5 fw-bold"> <span class="fs-4 fst-italic text-primary">Track: </span> <%= @student.track.name %> </p>

<div class="d-flex">
  <p class="me-1"> <%= link_to "Edit this student", edit_student_path(@student) %> |</p>
  <p> <%= link_to "Back to students", students_path %> |  </p>
  <%= button_to "Destroy this student", @student, class: "border border-0 bg-transparent text-primary text-decoration-underline" , method: :delete %>
</div>




